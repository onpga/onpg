{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/modules/Accueil/__tests__/**/*",
    "src/modules/AccueilONPG/AccueilONPG-ORIGINAL.tsx",
    "src/modules/AccueilONPG/AccueilONPG-backup-final.tsx",
    "src/modules/Ressources/Photos_clean.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

